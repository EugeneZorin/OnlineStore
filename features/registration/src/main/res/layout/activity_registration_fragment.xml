<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".presentation.RegistrationFragment">

    <TextView
        android:id="@+id/entryText"
        android:layout_width="73dp"
        android:layout_height="21dp"
        android:layout_marginTop="36dp"
        android:text="@string/entry"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EditName"
        android:layout_width="385dp"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        android:autofillHints="name"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="@string/NameEditText"
        android:inputType="text"
        android:maxLength="20"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"

        android:paddingBottom="12dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/EditFirstName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/EditFirstName"
        android:layout_width="385dp"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        android:autofillHints="name"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="@string/FirstName"
        android:inputType="text"
        android:maxLength="20"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"

        android:paddingBottom="12dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/EditPhoneNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/EditPhoneNumber"
        android:layout_width="385dp"
        android:layout_height="56dp"
        app:cornerRadius="10dp"
        android:layout_marginBottom="28dp"
        android:autofillHints="name"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="@string/PhoneNumber"
        android:inputType="phone"
        android:maxLength="20"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="385dp"
        android:layout_height="56dp"
        android:layout_marginBottom="288dp"
        android:backgroundTint="#D876C3"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/signIn"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/termsAgreement"
        android:layout_width="233dp"
        android:layout_height="27dp"
        android:layout_marginBottom="10dp"
        android:alpha="0.6"
        android:text="@string/termsAgreement"
        android:textAlignment="center"
        android:textColor="#504E4E"
        android:textSize="11sp"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>